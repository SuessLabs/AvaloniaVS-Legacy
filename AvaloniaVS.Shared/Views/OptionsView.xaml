<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:a="clr-namespace:AvaloniaVS"
             xmlns:conv="clr-namespace:AvaloniaVS.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AvaloniaVS.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:serilog="clr-namespace:Serilog.Events;assembly=Serilog"
             x:Class="AvaloniaVS.Views.OptionsView"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
  <UserControl.Resources>
    <conv:EnumValuesConverter x:Key="EnumValues" />
  </UserControl.Resources>

  <StackPanel Margin="20">
    <Grid HorizontalAlignment="Left">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="10" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="10" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="10" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="10" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" MinWidth="150" />
        <ColumnDefinition Width="20" />
        <ColumnDefinition Width="180" />
      </Grid.ColumnDefinitions>

      <TextBlock Text="Default Document View:"
                 Grid.Row="0"
                 Grid.Column="0"
                 VerticalAlignment="Top" />
      <ComboBox Grid.Row="0"
                Grid.Column="2"
                VerticalAlignment="Center"
                ItemsSource="{Binding Source={x:Type local:AvaloniaDesignerView}, Converter={StaticResource EnumValues}}"
                SelectedItem="{Binding DesignerView, Mode=TwoWay}" />

      <TextBlock Text="Split Orientation:"
                 Grid.Row="2"
                 Grid.Column="0"
                 VerticalAlignment="Top" />
      <StackPanel Grid.Row="2" Grid.Column="2">
        <ComboBox VerticalAlignment="Center"
                  ItemsSource="{Binding Source={x:Type Orientation}, Converter={StaticResource EnumValues}}"
                  SelectedItem="{Binding DesignerSplitOrientation, Mode=TwoWay}" />
        <CheckBox Margin="0,6,0,0"
                  VerticalAlignment="Center"
                  IsChecked="{Binding DesignerSplitSwapped, Mode=TwoWay}">
          Swapped
        </CheckBox>
      </StackPanel>

      <TextBlock Text="Default Zoom Level:"
                 Grid.Row="4"
                 Grid.Column="0"
                 VerticalAlignment="Top" />
      <ComboBox Grid.Row="4"
                Grid.Column="2"
                VerticalAlignment="Center"
                ItemsSource="{x:Static a:ZoomLevels.Levels}"
                SelectedItem="{Binding ZoomLevel, Mode=TwoWay}" />

      <TextBlock Text="Minimum Log Verbosity:"
                 Grid.Row="6"
                 Grid.Column="0"
                 VerticalAlignment="Top" />
      <ComboBox Grid.Row="6"
                Grid.Column="2"
                VerticalAlignment="Center"
                ItemsSource="{Binding Source={x:Type serilog:LogEventLevel}, Converter={StaticResource EnumValues}}"
                SelectedItem="{Binding MinimumLogVerbosity, Mode=TwoWay}" />

      <TextBlock Text="Anonymous Usage Analytics:"
                 Grid.Row="8"
                 Grid.Column="0"
                 VerticalAlignment="Top" />
      <CheckBox Grid.Row="8"
                Grid.Column="2"
                VerticalAlignment="Center"
                IsChecked="{Binding UsageTracking, Mode=TwoWay}">
        Enabled
      </CheckBox>
    </Grid>

    <TextBlock Text="The anonymous analytics is currently not linked up on the backend, though the above checkbox remains. No PII, source code, or any sensitive material is ever collected."
               FontSize="13"
               TextWrapping="Wrap" />

    <!--
    <TextBlock Text="Support the improvement of the extension by sharing anonymous usage data. No PII, source code, or any sensitive material is ever collected."
               FontSize="13"
               TextWrapping="Wrap" />
    -->
  </StackPanel>
</UserControl>
